{
  "name": "alpha-grid",
  "version": "1.0.0",
  "description": "A word board game where you create words with tiles on a board.",
  "scripts": {
    "lint": "eslint '**/*.ts' --fix",
    "format": "prettier --write '**/*.{ts,tsx,json,css,md}'",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,json,css,md}": "prettier --write"
  },
  "private": true
}
